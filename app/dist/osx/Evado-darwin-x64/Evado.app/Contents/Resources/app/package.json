{
	"name": "evado",
	"version": "0.1.0",
	"description": "",
	"author": "Bauke Posthuma",
	"license": "ISC",
	"main": "main.js",
	"dependencies": {
		"mysql": "~2.3.2"
	},
	"devDependencies": {
		"electron-packager": "^8.1.0",
		"electron-prebuilt": "^0.25.2"
	},
	"scripts": {
		"start": "electron main.js",

		"dev": "electron . --enable-logging",

		"clean": "rm -rf ./dist",
		"clean:osx": "rm -rf ./dist/osx",
		"clean:win": "rm -rf ./dist/win",

		"pack": "npm run clean && npm run pack:osx && npm run pack:win",
		"pack:osx": "npm run clean:osx && electron-packager . \"Evado\" --out=dist/osx --platform=darwin --arch=x64 --version=0.36.2 --icon=assets/osx/logo.icns --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",
		"pack:win": "npm run clean:win && electron-packager . \"Evado\" --out=dist/win --platform=win32 --arch=ia32 --version=0.36.2 --icon=assets/win/logo.ico --ignore=dist --ignore=assets --ignore=builder.json --ignore=bower.json --ignore=README.md --ignore=.gitignore --ignore=preview.png",

		"build": "npm run build:osx && npm run build:win",
		"build:osx": "npm run pack:osx && electron-builder \"dist/osx/Evado-darwin-x64/Evado.app\" --platform=osx --out=\"dist/osx\" --config=builder.json",
		"build:win": "npm run pack:win && electron-builder \"dist/win/Evado-win32-ia32\" --platform=win --out=\"dist/win\" --config=builder.json"
	}
}
